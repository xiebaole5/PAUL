/* result.wxss */
.result-section {
  margin-bottom: 24rpx;
}

.video-container {
  width: 100%;
  margin-bottom: 30rpx;
  background: #000;
  border-radius: 8rpx;
  overflow: hidden;
}

.video-player {
  width: 100%;
  height: 600rpx;
}

.video-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: #FFF5F5;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.info-text {
  font-size: 26rpx;
  color: #D32F2F;
  margin-bottom: 10rpx;
}

.btn-text {
  font-size: 26rpx;
  color: #D32F2F;
  background: none;
  border: none;
  padding: 0;
  line-height: 1.5;
  text-decoration: underline;
  margin-top: 0;
}

.btn-text::after {
  border: none;
}

.video-segments {
  margin-bottom: 30rpx;
}

.segment-header {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 6rpx solid #D32F2F;
}

.segment-item {
  background: #FAFAFA;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid #E0E0E0;
}

.segment-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.segment-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.segment-hint {
  font-size: 24rpx;
  color: #999;
}

.segment-video {
  width: 100%;
  height: 400rpx;
  margin-bottom: 15rpx;
  background: #000;
  border-radius: 6rpx;
  overflow: hidden;
}

.btn-mini {
  width: 100%;
  font-size: 26rpx;
  margin-top: 0;
}

.script-container {
  width: 100%;
  max-height: 800rpx;
  overflow-y: auto;
  background: #FAFAFA;
  border-radius: 8rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
  border: 2rpx solid #E0E0E0;
}

.script-content {
  font-size: 28rpx;
  line-height: 1.8;
  color: #333;
  white-space: pre-wrap;
  word-break: break-all;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.action-buttons button {
  flex: 1;
  margin-top: 0;
}
