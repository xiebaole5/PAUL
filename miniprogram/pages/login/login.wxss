/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
}

.login-header {
  text-align: center;
  margin-bottom: 80rpx;
}

.app-title {
  font-size: 56rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 10rpx;
  text-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
}

.app-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  display: block;
}

.login-form {
  width: 100%;
  background: white;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.2);
}

.form-item {
  margin-bottom: 30rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  background: #f7f7f7;
  border-radius: 10rpx;
  padding: 0 20rpx;
  height: 90rpx;
  position: relative;
}

.input-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.form-input {
  flex: 1;
  height: 100%;
  font-size: 30rpx;
  color: #333;
}

.placeholder {
  color: #999;
}

.toggle-password {
  font-size: 40rpx;
  padding: 10rpx;
  cursor: pointer;
}

.login-btn {
  width: 100%;
  height: 90rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 45rpx;
  font-size: 34rpx;
  font-weight: bold;
  margin-top: 40rpx;
  box-shadow: 0 10rpx 20rpx rgba(102, 126, 234, 0.3);
}

.login-btn::after {
  border: none;
}

.login-btn[disabled] {
  opacity: 0.6;
}

.tips {
  margin-top: 40rpx;
  text-align: center;
}

.tips-text {
  font-size: 24rpx;
  color: #999;
}

.footer {
  margin-top: 60rpx;
  text-align: center;
}

.footer-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}
